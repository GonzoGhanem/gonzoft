%div
	%h1 Listing Skills
	%a.btn.btn-success{"ng-show" => "has_role(admin) || has_role(staff)", "ng-hide" => "addingNew", "ng-click" => "addNew()"} Add new
	%form.form-inline{name: "addNewSkill", "ng-show" => "addingNew"}
		.form-group
			%label.sr-only{for: "newSkillName"} Name
			%input#newSkillName.form-control{type: "text", "ng-model" => "newSkill.name", placeholder: "Name", required: true}
		.form-group
			%label.sr-only{for: "newSkillDescription"} Description
			%input#newSkillDescription.form-control{type: "text", "ng-model" => "newSkill.description", placeholder: "Description"}
		%a.btn.btn-success{"ng-click" => "saveNewSkill()", "ng-disabled" => "addNewSkill.$invalid"} Save
		%a.btn.btn-default{"ng-click" => "cancelNewSkill()"} Cancel

%table#skills.table.table-hover
	%thead
		%th #
		%th Name
		%th Description
		%th{colspan: "2"} Actions
	%tbody
		%tr{"ng-repeat" => "(index, skill) in skills"}
			%td {{index + 1}}
			%td {{skill.name}}
			%td {{skill.description}}
			%td
				%a{"ng-click" => "edit(skill)"} Edit
			%td
				%a{"ng-click" => "delete(skill)"} Delete
